extends base

block content 
    div#videoContainer(data-id=video._id)
        video(src=video.fileUrl, crossorigin)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn 
                    i.fas.fa-play 
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute 
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        p.video__hashtags=video.hashtags
        p.video__title=video.title
        div.video__createInfo
            div.video__ownerContainer
                a(href=`/users/${video.owner._id}`)
                    img(src=video.owner.avatarUrl, crossorigin).video__avatar
                    
            div.video__owername
                a(href=`/users/${video.owner._id}`)=video.owner.username
                span.video__subscribe #{video.meta.views} subscribers
          
            fieldset.video__icons
                if String(video.owner._id) === String(loggedInUser._id)
                    i.fas.fa-pen
                        a(href=`${video.id}/edit`)
                            span Edit
                    i.fas.fa-trash
                        a(href=`${video.id}/delete`)
                            span Delete
                    span.line |
                    i.far.fa-thumbs-up 
                        span Like
                    i.far.fa-thumbs-down  
                        span Dislike
                    i.fas.fa-share  
                        span Share
                    i.fas.fa-long-arrow-alt-down  
                        span Download
                else
                    i.far.fa-thumbs-up 
                        span Like
                    i.far.fa-thumbs-down  
                        span Dislike
                    i.fas.fa-share  
                        span Share
                    i.fas.fa-long-arrow-alt-down  
                        span Download

        hr
        div.video__ownerComment
            span.video-views #{video.meta.views} views |   
            span.video-createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {year: 'numeric', month: 'numeric', day: 'numeric'})
            p.video__description=video.description
        hr

    if loggedIn
        div.video__add-comments 
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a nice comment...")
                button Add Comment
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span.video__comment-deleteBtn  ‚ùå


block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")
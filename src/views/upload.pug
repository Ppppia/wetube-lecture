extends base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data").video-upload__form
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="Title", required, type="text", name="title", maxlength=100)
            input(placeholder="Description", required, type="text", name="description", minlength=2)
            input(placeholder="Hashtags, must add '#' before each word", required, type="text", name="hashtags")
            input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js") 